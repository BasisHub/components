                        switch ctrl!.getControlType()
                            case BBjControl.LISTBUTTON_TYPE
                            case BBjControl.LISTBOX_TYPE

                            break

                            case BBjControl.CHECKBOX_TYPE
                            ctrl!.setSelected(0)
                            break

                            case default
                            ctrl!.setText("")
                            break
                        swend

                    fi

                wend

            fi

        fi

    methodend


