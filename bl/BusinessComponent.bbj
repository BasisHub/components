    method public json getResultSetAsJson(BBjNumber first, BBjNumber last)
    
        declare json jr!
        declare json jason!
    
        first = max(0,first)
        last = min(last,#size())
        
        #prepareResultSet(first,last)
        
        jv! = new BBjVector()
        json! = new json()
        
        for i=first to last-1
            jr! = new json()
            row! = #getResultSet().getItem(i)
            
            vf! = row!.getFieldNames()
                    if vf!.size() then
                        
                        for j=vf!.size()-1 to 0 step -1
                            f$=vf!.getItem(j)
                            jr!.set(f$,row!.getFieldAsString(f$))
                        next

                    fi            
            
            jv!.addItem(jr!)
        next
        json!.set("recordset",jv!)
        
        methodret json!
    
    methodend

