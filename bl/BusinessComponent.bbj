        while it!.hasNext()
            k$=it!.next()
            clist! = #Controller!.get(k$)
            vlist! = #ControllerVars!.get(k$)

            v!=new BBjVector()

            if #Selection!.size() then

                for i= 0 to #Selection!.size()-1
                    k = #Selection!.getItem(i)
                    rec! = #ResultSet!.getItem(k)
