    method public json getColumnAttributesAsJson()
    
        declare DataRow attr!
        declare json json!
        declare json jf! 
        attr! = #getColumnAttributes()
        pkey! = #getPrimaryKeySegments()

        json! = new json()

        v! = attr!.getFieldNames()
        jv! = new BBjVector()
        if v!.size() then
            
            for i=0 to v!.size()-1
                jf! = new json()
                f$=v!.getItem(i)
                jf!.set("name",f$)
                
                if #getPrimaryKeySegments().indexOf(f$)>-1
                    jf!.set("index","1")
                fi
                
                col_attr! = attr!.getFieldAttributes(f$)

                ks! = col_attr!.keySet()
                it! = ks!.iterator()
                while it!.hasNext()
                        k$=it!.next()
                        jf!.set(K$,col_attr!.get(K$))
                wend

                jv!.addItem(jf!)
            next
            
        fi
        
        json!.set("fields",jv!)
        json!.set("tablename",#DataProvider!.getPrimaryTable())
        json!.set("title",#getTitle())
        
        methodret json!
        
    methodend
    
